@page "/"

@if(string.IsNullOrEmpty(LoggedInUser.Id))
{
    <Login OnUserAuthenticated="OnUserAuthenticated"/>
}
else
{
    <Chat />
}


@code {
    
    [Inject] private ILoggedInUserModel LoggedInUser { get; set; } = null!;
    [CascadingParameter] public required Task<AuthenticationState> AuthState { get; set; }
    
    private bool IsLoggedIn { get; set; }

    private void OnUserAuthenticated(bool obj)
    {
        IsLoggedIn = true;
    }
}